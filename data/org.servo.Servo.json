{
	"app-id": "org.servo.Servo",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "20.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "servo",
	"finish-args" : [
		"--socket=wayland",
		"--socket=fallback-x11",
		"--device=dri",
		"--socket=pulseaudio",
		"--share=ipc",
		"--share=network"
	],
	"build-options" : {
		"append-path": "/app/lib/sdk/rust-nightly/bin",
		"no-debuginfo": true,
		"no-debuginfo-compression": true,
		"strip": false
	},
	"modules": [
		"python3-requirements.json",
		"python3-requests.json",
		"python3-voluptuous.json",
		"python3-pyyaml.json",
		{
			"name": "autoconf-2.13",
			 "config-opts": ["--program-suffix=2.13"],
			"cleanup": [ "*" ],
			"sources": [
			{
				"type": "archive",
				"url": "https://ftp.gnu.org/gnu/autoconf/autoconf-2.13.tar.gz",
				"sha256": "f0611136bee505811e9ca11ca7ac188ef5323a8e2ef19cffd3edb3cf08fd791e"
			}
			]
		},
		{
			"name": "rust",
			"buildsystem": "simple",
			"cleanup": [ "*" ],
			"build-commands": [
				"./rust-nightly/install.sh --prefix=/app/lib/sdk/rust-nightly --disable-ldconfig --without=rust-docs",
				"./rustc-dev/install.sh --prefix=/app/lib/sdk/rust-nightly --disable-ldconfig"
			],
			"sources": [
				{
					"type": "archive",
					"only-arches": [ "aarch64" ],
					"url": "https://static.rust-lang.org/dist/2021-07-17/rust-nightly-aarch64-unknown-linux-gnu.tar.xz",
					"sha256": "5148acc3e8ceab350f57eaaba5350910e0fbceb2c485960ed0e0f83ed29f72f8",
					"dest": "rust-nightly"
				},
				{
					"type": "archive",
					"only-arches": [ "x86_64" ],
					"url": "https://static.rust-lang.org/dist/2021-07-17/rust-nightly-x86_64-unknown-linux-gnu.tar.xz",
					"sha256": "77717e106af6f9412e9f016a834a4ff38d834ac132b562f61509607ac3093bd1",
					"dest": "rust-nightly"
				},
				{
					"type": "archive",
					"only-arches": [ "aarch64" ],
					"url": "https://static.rust-lang.org/dist/2021-07-17/rustc-dev-nightly-aarch64-unknown-linux-gnu.tar.xz",
					"sha256": "69f92abebe62b91f548c55c6fad121b823ebbb59682d72ff7e818381e77ac2ba",
					"dest": "rustc-dev"
				},
				{
					"type": "archive",
					"only-arches": [ "x86_64" ],
					"url": "https://static.rust-lang.org/dist/2021-07-17/rustc-dev-nightly-x86_64-unknown-linux-gnu.tar.xz",
					"sha256": "3303f0626cf5306c785254fac9b49bb5df299900b0aa2f798d665124ed515f36",
					"dest": "rustc-dev"
				}
			]
		},
		{
			"name": "servo",
			"buildsystem": "simple",
			"build-options" : {
				"env": {
					"CARGO_HOME": "/run/build/servo/cargo"
				}
			},
			"build-commands": [
				"mv servobuild.example .servobuild",
				"sed -i 's|use-rustup = true|use-rustup = false|' .servobuild",
				"python3 ./mach build -d -p servo",
				"install -Dm 644 data/org.servo.Servo.desktop -t /app/share/applications",
				"install -Dm 644 data/org.servo.Servo.metainfo.xml -t /app/share/metainfo",
				"install -Dm 755 target/debug/servo /app/bin/servo",
				"install -Dm 644 resources/servo.svg /app/share/icons/hicolor/scalable/apps/org.servo.Servo.svg",
				"install -Dm 644 resources/servo_64.png /app/share/icons/hicolor/64x64/apps/org.servo.Servo.png",
				"cp -r resources /app/bin/"
			],
			"sources": [
				"cargo-sources.json",
				"fontsan-deps-sources.json",
				{
					"type": "git",
					"url": "https://github.com/okias/servo.git",
					"branch": "flatpak"
				}
			]
		}
	]
}
